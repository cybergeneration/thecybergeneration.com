!!!5
%html

  = partial 'includes/head'

  %body{class: page_classes, itemscope: true, itemtype: 'http://schema.org/WebPage'}

    = partial 'includes/header'

    .index{role: 'main', itemprop: 'mainContentOfPage'}
      .container
        %h1
          = current_article.title
        %p.lead
          = current_article.summary
        %p.meta 
          %span.data #{current_article.date.strftime('%B %e')} 
          &nbsp;by&nbsp;
          %span.data #{current_article.author}
        %hr
        - unless current_article.image.nil?
          = image_tag current_article.image
        = yield

    = partial 'includes/footer'

    = javascript_include_tag :all

    = partial 'includes/google-analytics'
    
    %script{src: '//code.jquery.com/jquery-2.0.3.min.js'}
    %script{src: '//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js'}

